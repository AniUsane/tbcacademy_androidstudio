<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingTop="63dp"
    android:background="@color/white"
    tools:context=".DetailsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order "
        android:textSize="18sp"
        android:textColor="@color/order_num_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1524"
        android:textSize="18sp"
        android:textColor="@color/order_num_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/order"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13/05/2021"
        android:textSize="14sp"
        android:textColor="@color/date_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracking number: "
        android:textSize="14sp"
        android:textColor="@color/date_color"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/order_number"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tracking_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" IK287368838"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toRightOf="@+id/tracking"
        app:layout_constraintTop_toBottomOf="@id/order_number"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quanlity: "
        android:textSize="14sp"
        android:textColor="@color/date_color"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tracking"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quantity_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toRightOf="@+id/quantity"
        app:layout_constraintTop_toBottomOf="@id/tracking"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal: "
        android:textSize="14sp"
        android:textColor="@color/date_color"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tracking"
        app:layout_constraintRight_toLeftOf="@+id/total"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$110"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tracking"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textColor="@color/pending_color"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/quantity"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/details_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:paddingHorizontal="30dp"
        android:background="@drawable/details_btn"
        app:layout_constraintTop_toBottomOf="@+id/subtotal"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>