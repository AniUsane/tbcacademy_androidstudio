<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddCardFragment"
    android:padding="30dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_btn"
        android:background="@drawable/back_btn_background"
        android:elevation="2dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new card"
        android:textColor="@color/page_title"
        android:textSize="18sp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/card_background"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:background="@drawable/mastercard_bckgrnd"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/page_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/card_background"
        app:layout_constraintRight_toRightOf="@+id/card_background"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/card_number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="****"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:letterSpacing="0.15"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/card_background"
        app:layout_constraintRight_toLeftOf="@+id/card_number2"
        app:layout_constraintTop_toTopOf="@+id/card_background" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/card_number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="****"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:letterSpacing="0.15"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/card_number1"
        app:layout_constraintLeft_toRightOf="@+id/card_number1"
        app:layout_constraintRight_toLeftOf="@+id/card_number3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/card_number3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="****"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:letterSpacing="0.15"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/card_number1"
        app:layout_constraintLeft_toRightOf="@+id/card_number2"
        app:layout_constraintRight_toLeftOf="@+id/card_number4"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/card_number4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="****"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:letterSpacing="0.15"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/card_number1"
        app:layout_constraintLeft_toRightOf="@+id/card_number3"
        app:layout_constraintRight_toRightOf="@+id/card_background"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/holder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="16dp"
        android:text="NAME"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintLeft_toLeftOf="@+id/card_background"
        app:layout_constraintTop_toTopOf="@+id/card_background"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/valid_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="151dp"
        android:layout_marginLeft="16dp"
        android:text="DD/YY"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="@+id/card_background"
        app:layout_constraintBaseline_toBaselineOf="@+id/holder_name"
        />

    <TextView
        android:id="@+id/cardholder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Cardholder Name"
        android:textSize="12sp"
        android:textColor="@color/add_card_texts"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/card_background"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/enter_holder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/edit_text"
        android:textSize="14sp"
        android:layout_marginTop="11dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@+id/cardholder_text"
        />

    <TextView
        android:id="@+id/card_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Card Number"
        android:textSize="12sp"
        android:textColor="@color/add_card_texts"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/enter_holder_name"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/enter_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/edit_text"
        android:textSize="14sp"
        android:layout_marginTop="11dp"
        android:inputType="number"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@+id/card_number_text"
        />

    <TextView
        android:id="@+id/expire_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Expires"
        android:textSize="12sp"
        android:textColor="@color/add_card_texts"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/enter_card_number"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/expire_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/edit_text"
        android:textSize="14sp"
        android:layout_marginTop="11dp"
        android:inputType="number"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@+id/expire_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/enter_ccv"
        />

    <TextView
        android:id="@+id/ccv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="CCV"
        android:textSize="12sp"
        android:textColor="@color/add_card_texts"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/expire_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/expire_text"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/enter_ccv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/edit_text"
        android:textSize="14sp"
        android:layout_marginTop="11dp"
        android:inputType="number"
        android:background="@drawable/edit_text_background"
        app:layout_constraintBaseline_toBaselineOf="@+id/expire_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/expire_date"
        />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/expire_date">

        <RadioButton
            android:id="@+id/visa_radBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visa"/>

        <RadioButton
            android:id="@+id/mastercard_radBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mastercard"/>

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Add card"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/add_btn_background"
        app:layout_constraintTop_toBottomOf="@+id/expire_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />



</androidx.constraintlayout.widget.ConstraintLayout>