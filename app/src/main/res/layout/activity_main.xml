<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp"
    android:background="@drawable/background_img"
    android:layout_weight="1"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="36dp"
        android:textColor="#A589A9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fields_style"
        android:hint="First Name"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/page_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textColor="@color/white"
        android:background="@drawable/fields_style"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/first_name"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:textColor="@color/white"
        android:background="@drawable/fields_style"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/last_name"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fields_style"
        android:hint="Email"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/age"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_user_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add User"
        android:textSize="15dp"
        android:textColor="#5E4D64"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginRight="5dp"
        android:background ="@drawable/fields_style"
        android:backgroundTint="#50FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintRight_toLeftOf="@+id/remove_user_btn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/remove_user_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remove User"
        android:textSize="15dp"
        android:textColor="#5E4D64"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_bold"
        android:background ="@drawable/fields_style"
        android:backgroundTint="#50FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/add_user_btn"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintRight_toRightOf="parent"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_user_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update User"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#5E4D64"
        android:padding="5dp"
        android:fontFamily="@font/roboto_bold"
        android:background ="@drawable/fields_style"
        android:backgroundTint="#50FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/add_user_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/identification_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success/Fail"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/update_user_btn"

        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/active_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Online Users: 1"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/identification_txt"

        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/removed_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Removed Users: 1"
        android:fontFamily="@font/roboto_regular"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/active_users"

        />



</androidx.constraintlayout.widget.ConstraintLayout>