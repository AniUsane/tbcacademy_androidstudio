<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/top_spacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/transparent_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/review_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/review_background"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_page_title"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_semi_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/status_gray_text"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding = "20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/review_card_background"
            app:layout_constraintTop_toBottomOf="@+id/line1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/card_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_semi_bold"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/card_image"/>

            <View
                android:id="@+id/color_circle"
                android:background="@drawable/color_circle_background"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                app:layout_constraintLeft_toRightOf="@+id/card_image"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="@color/quantity_color"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                app:layout_constraintLeft_toRightOf="@+id/color_circle"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/quantity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity_text"
                android:textSize="14sp"
                android:textColor="@color/quantity_color"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                app:layout_constraintLeft_toRightOf="@+id/color"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/quantity_color"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                app:layout_constraintLeft_toRightOf="@+id/quantity_text"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/card_status_background"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/color"
                app:layout_constraintLeft_toRightOf="@+id/card_image"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_semi_bold"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/card_status"
                app:layout_constraintLeft_toRightOf="@+id/card_image"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/card_btn_background"
                android:text="@string/leave_review_btn"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_semi_bold"
                android:textAllCaps="false"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/card_status"
                app:layout_constraintRight_toRightOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/status_gray_text"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/card"
            />

        <TextView
            android:id="@+id/order_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_question"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
        />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rate_order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/provide_review_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/order_question"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
        />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/rate_order_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/leave_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/review_hint"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/review_field_background"
            app:layout_constraintTop_toBottomOf="@+id/rating_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/status_gray_text"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/leave_review"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/cancel_btn"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textAllCaps="false"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cancel_background"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/line3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/submit_btn"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/cancel_btn"
            android:text="@string/submit_btn"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:background="@drawable/submit_background"
            app:layout_constraintTop_toBottomOf="@+id/line3"
            app:layout_constraintLeft_toRightOf="@id/cancel_btn"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>