<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/filter_icon"
        android:background="@drawable/icon_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alice Smith"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/profile_pic"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Great. I will have a look"
        android:textColor="@color/white"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/profile_pic"
        app:layout_constraintTop_toBottomOf="@+id/username"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:20 PM"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/username"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/unread_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:background="@drawable/filter_shape"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/message"
        />


</androidx.constraintlayout.widget.ConstraintLayout>