<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PaymentFragment"
    android:padding="30dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_btn"
        android:background="@drawable/back_btn_background"
        android:elevation="2dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textColor="@color/page_title"
        android:textSize="18sp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/manage_card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Card Management"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/page_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_new_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new+"
        android:textColor="@color/add_new_color"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/page_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/manage_card_text"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/manage_card_text"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alternative_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or check out with"
        android:textSize="12sp"
        android:textColor="@color/alternative_ways"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/view_pager"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/paypal_img"
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:src="@drawable/paypal"
        android:layout_marginTop="58dp"
        android:background="@drawable/other_cards_background"
        app:layout_constraintTop_toBottomOf="@+id/alternative_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/visa_img"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/visa_img"
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:background="@drawable/other_cards_background"
        android:src="@drawable/visa_logo"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/alternative_text"
        app:layout_constraintLeft_toRightOf="@+id/paypal_img"
        app:layout_constraintRight_toLeftOf="@+id/mastercard_img"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/mastercard_img"
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:background="@drawable/other_cards_background"
        android:src="@drawable/mastercard_logo"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@id/alternative_text"
        app:layout_constraintLeft_toRightOf="@+id/visa_img"
        app:layout_constraintRight_toLeftOf="@+id/alipay_img"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/alipay_img"
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:background="@drawable/other_cards_background"
        android:src="@drawable/alipay"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/alternative_text"
        app:layout_constraintLeft_toRightOf="@+id/mastercard_img"
        app:layout_constraintRight_toLeftOf="@+id/amex_img"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/amex_img"
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:background="@drawable/amex_card_background"
        android:src="@drawable/amex"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/alternative_text"
        app:layout_constraintLeft_toRightOf="@+id/mastercard_img"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>