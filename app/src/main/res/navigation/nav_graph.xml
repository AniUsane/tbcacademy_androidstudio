<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/paymentFragment">

    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.myapplication.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/action_paymentFragment_to_addCardFragment"
            app:destination="@id/addCardFragment" />
        <argument
            android:name="cardInfo"
            app:argType="com.example.myapplication.CardInfo" />
    </fragment>
    <fragment
        android:id="@+id/addCardFragment"
        android:name="com.example.myapplication.AddCardFragment"
        android:label="fragment_add_card" >
        <argument
            android:name="cardInfo"
            app:argType="com.example.myapplication.CardInfo" />
        <action
            android:id="@+id/action_addCardFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
</navigation>